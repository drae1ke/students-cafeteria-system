<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKUAT Student's Mess</title>
    <link rel="stylesheet" href="css/e-wallet.css">
</head>
<body>
    <nav class="navbar">
        <div class="logo">
            <p class="text-2xl font-bold text-white m-0">JKUAT STUDENT'S MESS</p>
        </div>
        <div class="nav-toggle">
            <button onclick="toggleMenu()" class="menu-button">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
            <div class="nav-menu" id="nav-menu">
                <ul>
                    <li><a href="/menu">Menu</a></li>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/index">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="grid-container">
            <!-- Sidebar -->
            <div class="sidebar">
                <h2 class="menu-title">University Blog</h2>
                <div class="menu-items">
                    <div class="menu-item">Students portal</div>
                    <div class="menu-item">JKUAT news</div>
                    <div class="menu-item">My Job bag</div>
                    <div class="menu-item">University contacts</div>
                    <div class="menu-item">About JKUAT</div>
                    <div class="menu-item">Univus</div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="content">
                <!-- E-Wallet Form -->
                <div class="wallet-form">
                    <h3 class="wallet-title">E-WALLET</h3>
                    <form id="payment-form" class="form">
                        <div class="form-group">
                            <label for="number">Mpesa Number</label>
                            <input type="tel" id="number" class="form-input">
                            <p id="num-error" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="text" id="amount" placeholder="as from 10ksh" class="form-input">
                            <p id="amount-error" class="error-message"></p>
                        </div>

                        <button type="submit" class="submit-btn">Deposit</button>
                        <p id="submit-error" class="error-message"></p>
                    </form>
                </div>

                <!-- Balance Display -->
                <div class="balance-display">
                    <h3>BALANCE</h3>
                    <h4>KES: <span id="balance-amount">0.00</span></h4>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        Jkuat @ 2024 mess
    </footer>

    <script src="../scripts/e-waalet.js"></script>
</body>
</html>
